<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-12">
    <div class='margin_elements_above_table'>
      <%= link_to 'New Soda', new_soda_path, class: 'btn btn-primary pull-right' %>

      <div class="ajust_size_search">
        <%= form_tag( '/sodas', method: :get, class: "navbar-form") do %>
          <div class="input-group no-border">
            <%= text_field_tag 'search', nil, onkeyup: "modify_up(this)", class: "form-control", placeholder: 'Enter search term...' %>
            <%= button_tag type: 'submit', class: "btn btn-white btn-round btn-just-icon" do %>
              <i class="material-icons">search</i>
              <div class="ripple-container"></div>
            <% end %>
          </div>
        <% end %>
      </div>      
    </div>
    <div class="card">
      <div class="card-header card-header-primary">
        <h4 class="card-title "><%= t :table_title %></h4>
        <p class="card-category"> <%= t :table_subtitle %></p>
      </div>
      <div class="card-body">
        <div class="table-responsive">          
          <%= form_tag destroy_multiple_sodas_path, method: :delete do %>
            <%= button_tag type: "submit", class: "btn", id: "btnDeleteAll" do %>
              <i class="material-icons">delete</i>
            <% end %>
            <table class="table">
              <thead class=" text-primary">
                <tr>
                  <th data-sort-ignore="true"><input type="checkbox" id="selectAll"></input></th>
                  <th>Brand</th>
                  <th>Category</th>
                  <th>Flavor</th>
                  <th>Capacity</th>
                  <th>Price</th>
                  <th>Quantiti</th>
                  <th colspan="3"></th>
                </tr>
              </thead>

              <tbody>
                <% @sodas.each do |soda| %>
                  <tr>
                    <td><%= check_box_tag 'soda_ids[]', soda.id, false, class: 'selectable' %></td>
                    <td><%= soda.brand %></td>
                    <td><%= soda.category %></td>
                    <td><%= soda.flavor %></td>
                    <td><%= soda.capacity %></td>
                    <td><%= soda.price %></td>
                    <td><%= soda.quantiti %></td>
                    <td><%= link_to 'Show', soda %></td>
                    <td><%= link_to 'Edit', edit_soda_path(soda) %></td>
                    <td><%= link_to 'Destroy', soda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>

        <div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @posts %>
    </div>
    <%= will_paginate @posts, :container => false %>
  </div>
        <br>
      </div>
    </div>
  </div>
</div>