<p id="notice"><%= notice %></p>

<%= form_tag( '/sodas' , method: :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'Enter search term...' %>
  <%= submit_tag 'Search' %>
<% end %>
<h1>Sodas</h1>

<%= form_tag destroy_multiple_sodas_path, method: :delete do %>
  <%= submit_tag "Delete selected" %>
  <table>
    <thead>
      <tr>
        <th data-sort-ignore="true"><input type="checkbox" id="selectAll"></input></th>
        <th>Brand</th>
        <th>Category</th>
        <th>Flavor</th>
        <th>Capacity</th>
        <th>Price</th>
        <th>Quantiti</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sodas.each do |soda| %>
        <tr>
          <td><%= check_box_tag 'soda_ids[]', soda.id, false, class: 'selectable' %></td>
          <td><%= soda.brand %></td>
          <td><%= soda.category %></td>
          <td><%= soda.flavor %></td>
          <td><%= soda.capacity %></td>
          <td><%= soda.price %></td>
          <td><%= soda.quantiti %></td>
          <td><%= link_to 'Show', soda %></td>
          <td><%= link_to 'Edit', edit_soda_path(soda) %></td>
          <td><%= link_to 'Destroy', soda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= will_paginate @sodas %>
<br>
<%= link_to 'New Soda', new_soda_path %>