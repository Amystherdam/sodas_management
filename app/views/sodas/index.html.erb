<p id="notice"><%= notice %></p>

<%= form_tag( '/sodas' , method: :get) do %>
  <%= text_field_tag 'search', nil, placeholder: 'Enter search term...' %>
  <%= submit_tag 'Search' %>
<% end %>
<h1>Sodas</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Category</th>
      <th>Flavor</th>
      <th>Capacity</th>
      <th>Price</th>
      <th>Quantiti</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sodas.each do |soda| %>
      <tr>
        <td><%= soda.brand %></td>
        <td><%= soda.category %></td>
        <td><%= soda.flavor %></td>
        <td><%= soda.capacity %></td>
        <td><%= soda.price %></td>
        <td><%= soda.quantiti %></td>
        <td><%= link_to 'Show', soda %></td>
        <td><%= link_to 'Edit', edit_soda_path(soda) %></td>
        <td><%= link_to 'Destroy', soda, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @sodas %>
<br>

<%= link_to 'New Soda', new_soda_path %>
